<h1>口コミ一覧</h1>
<% posts.each do |post|%>

  <div class=card>
    <p>内容:<%= post.comment%></p>
    <p>評価 :<%= post.star%>点</p>
    <div id="star-rate<%= post.id%>"></div>

  <!-- 評価javascript -->
  <script>
  $('#star').raty({
    size     : 36,
    starOff:  '<%= asset_path('star-off.png') %>',
    starOn : '<%= asset_path('star-on.png') %>',
    starHalf: '<%= asset_path('star-half.png') %>',

    scoreName: 'post[star]',
    half: true
  });
  </script>
</div>
<% end %>