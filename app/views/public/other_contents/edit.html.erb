<div class="container">
  <div class="row m-3">
    <h3>
      <span class="bg-secondary px-2">コンテンツ編集(映画以外)</span>
    </h3>
  </div>
  <div class="row m-3">
    <div class="col-7">
      <%= form_with model: @other_content,url: other_content_path(@other_content), method: :patch do |f| %>
      <div class="form-group">
        <%= f.label "画像  　　　　" %>
        <%= f.file_field :image, accept: "image/*" %></br>
      </div>
      <div class="form-group">
        <%= f.label "タイトル　　           " %>
        <%= f.text_field :title %></br>
      </div>
      <div class="form-group">
        <%= f.label "公開日時　　           " %>
        <%= f.date_field :release_date %></br>
      </div>
      <div class="form-group">
        <%= f.label "ジャンル  　　" %>
        <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), { include_blank: '--選択してください--' } %></br>
      </div>
      <div class="d-flex">
        <%= f.submit '変更を保持' ,class:"btn btn-success"%>
      </div>
      <% end %>
    </div>
  </div>
</div>