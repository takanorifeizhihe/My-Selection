<div class="container">  
   <div class="row m-3">
     <h3>
       <span class="bg-secondary px-2">
        <%= @user.nickname %>さんの会員情報編集
      </span>
     </h3>
    </div>
    <div class="row m-3">
      <div class="col-7">
        <%= form_with model: @user, url: admin_user_path(@user.id), method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :'会員ID' %>  　　　　　　　
          <%= @user.id %>
        </div>
        <div class="form-group">
          <%= f.label :'NickName' %>  　　　　　
          <%= f.text_field :nickname %>
        </div>
        <div class="form-group">
          <%= f.label :'生年月日' %>　　　　　　
          <%= f.date_field :birthday, name: "user[birthday]" %>
        </div>
        <div class="form-group">
          <%= f.label :'メールアドレス' %>   　　　
          <%= f.email_field :email %>
        </div>
        <div class="form-group">
          <%= f.label :'会員ステータス' %>　　　
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, '有効', value: true %>　
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, '退会', value: false %>
        </div>
        <div class="form-group">
          <%= f.submit '変更を保持' %>
        </div>
        <% end %>
      </div>
    </div>
</div>