<div class="container">  
   <div class="row m-3">
    <h3>  
      <span class="bg-secondary px-2">会員一覧</span><br>
    </h3>
    <table class="table table-hover table-inverse">
      <thead class="table-secondary">
        <tr>
          <th>会員ID</th>
          <th>ニックネーム</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td>
            <%= link_to admin_user_path(user.id) do %>
              <%= user.nickname %>
            <% end %>
          </td>
          <td><%= user.email %></td>
          <% if user.is_active == true %>
            <td class="text-success">有効</td>
          <% else %>
            <td class="text-secondary">退会</td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @users %>
   </div>
</div>