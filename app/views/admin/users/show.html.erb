<div class="container">
   <div class="row m-3">
     <h3>
      <span class="bg-secondary px-2">
        <%= @user.nickname %>さんの会員詳細
      </span>
     </h3>
    </div>
    <div class="row m-3">
      <div class="col-7">
        <%= form_with model: @user do |f| %>
        <div class="form-group">
          <%= f.label :'会員ID:' %>
          <%= @user.id %>
        </div>
        <div class="form-group">
          <%= f.label :'nickname:' %>
          <%= @user.nickname %>
        </div>
        <div class="form-group">
          <%= f.label :'生年月日:' %>
          <%= @user.birthday %>
        </div>
        <div class="form-group">
          <%= f.label :'メールアドレス:' %>
          <%= @user.email %>
        </div>
        <div class="form-group">
          <%= f.label :'会員ステータス:' %>
          <% if @user.is_active == true %>
            <%= f.label :'有効',class:"text-success" %>
          <% else %>
            <%= f.label :'退会済',class:"text-secondary" %>
          <% end %>
        </div>
        <div class="form-group">
          <%= link_to edit_admin_user_path(@user.id) do %>
            <%= f.label :'編集する' ,class:"btn btn-success "%>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
</div>